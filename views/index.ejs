<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta http-equiv="X-UA-Compatible" content="ie=edge" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
		integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
	<link rel="stylesheet" href="/styles.css" />
	<title>ChatCord App</title>
</head>

<body>
	<div class="join-container">
		<header class="join-header">
			<h1>Chatiz</h1>
		</header>
		<main class="join-main">
			<form action="/meet">
				<div class="form-control">
					<label for="username">Username</label>
					<input type="text" name="username" id="username" placeholder="Enter username..." required />
				</div>
				<div class="form-control">
					<label for="room">Room</label>
					<input type="text" name="room" id="room" value="" placeholder="paste room id">
				</div>

				<div>
					<div  style="display: block; margin-left: auto;margin-right: auto;width: 500px;"><h1 >------or------</h1></div>
					
					<button name="room" class="btn" onclick="create(event)">create an room id</button>
				</div>
				<button type="submit" class="btn">Join Chat</button>
			</form>
		</main>
	</div>
	<script>

		let roomId = '';
		function create(e) {
			e.preventDefault();
			const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
			const room = document.getElementById('room')
			for (let i = 0; i < 12; i++) {
				const randomIndex = Math.floor(Math.random() * characters.length);
				roomId += characters.charAt(randomIndex);
			}
			room.value = roomId
		}
	</script>
</body>

</html>