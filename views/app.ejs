<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>videoChatApp</title>
    <link rel="stylesheet" href="/app.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
   <script>
    //   const ROOM_ID = "<%= locals.roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
     
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3>Video Chat</h2>
          
      </div>
    
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">
            <video class="localVideo" autoplay muted></video>
            <video class="remoteVideo" autoplay></video>
        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <h4 id="room-name"></h4>
          <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
        </div>
        <div class="options__right">
          <button id="toggleDropdown" class="options__button">
            <i class="fas fa-users" ></i>
            <ul id="users" class="dropdown-content hidden" >
            
            </ul>
        </button>
        </div>
      </div>
    </div>
    <div class="main__right ">
      <div class="main__chat_window">
          <div class="messages chat-messages">
           </div>
      </div>
      <form id="chat-form" action="">

        <div class="main__message_container">
         
            <input id="msg" type="text"required autocomplete="off" placeholder="Type message here...">
            <button id="send" type="submit" class="options__button">
              <i class="fa fa-paper-plane" aria-hidden="true"></i>
            </button>
          </div>
      </form>
      
    </div>
  </div>
  </body>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  
  <script src="/main.js"></script>
</html>
